<?xml version="1.0" encoding="UTF-8"?>
<localEntry key="SecureChoreoKafkaConnection" xmlns="http://ws.apache.org/ns/synapse">
  <kafkaTransport.init>
    <connectionType>KAFKASECURE</connectionType>
    <bootstrapServers>$env{KAFKA_ENDPOINT}</bootstrapServers>
    <keySerializerClass>org.apache.kafka.common.serialization.StringSerializer</keySerializerClass>
    <valueSerializerClass>org.apache.kafka.common.serialization.StringSerializer</valueSerializerClass>
    <sslKeyPassword>$env{KEY_PASS}</sslKeyPassword>
    <sslKeystoreLocation>$env{KEY_STORE_PATH}</sslKeystoreLocation>
    <sslKeystorePassword>$env{KEY_STORE_PASS}</sslKeystorePassword>
    <sslTruststoreLocation>$env{TRUST_STORE_PATH}</sslTruststoreLocation>
    <sslTruststorePassword>$env{TRUST_STORE_PASS}</sslTruststorePassword>
    <securityProtocol>SSL</securityProtocol>
    <name>SecureChoreoKafkaConnection</name>
  </kafkaTransport.init>
</localEntry>